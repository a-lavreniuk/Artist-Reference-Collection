{
  "name": "arc-electron",
  "version": "1.2.5",
  "description": "ARC - Artist Reference Collection Desktop Application",
  "main": "main/main.js",
  "author": "Александр Лавренюк",
  "license": "MIT",
  "scripts": {
    "dev": "npm run build:renderer:dev & npm run electron:dev",
    "electron:dev": "electron .",
    "build:renderer:dev": "cd renderer && npm run dev",
    "build:renderer": "cd renderer && npm run build",
    "build:main": "tsc -p tsconfig.main.json",
    "build:preload": "tsc -p tsconfig.preload.json",
    "build": "npm run build:main && npm run build:preload && npm run build:renderer",
    "generate-icon": "node scripts/generate-icon.js",
    "electron:build": "npm run build && electron-builder",
    "build:prod": "npm run build && electron-builder --win --x64",
    "build:prod:signed": "npm run build && electron-builder --win --x64 --publish never",
    "release": "npm run build && electron-builder --win --x64 --publish always",
    "pack": "npm run build && electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@types/archiver": "^7.0.0",
    "@types/extract-zip": "^2.0.0",
    "@types/fluent-ffmpeg": "^2.1.28",
    "archiver": "^7.0.1",
    "electron-updater": "^6.1.7",
    "extract-zip": "^2.0.1",
    "fluent-ffmpeg": "^2.1.3",
    "sharp": "^0.34.5"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "to-ico": "^1.1.5",
    "typescript": "^5.3.3"
  },
  "build": {
    "appId": "com.arc.app",
    "productName": "ARC",
    "directories": {
      "output": "release",
      "buildResources": "resources"
    },
    "files": [
      "main/**/*",
      "preload/**/*",
      "renderer/dist/**/*"
    ],
    "extraResources": [
      {
        "from": "resources/icon.ico",
        "to": "icon.ico"
      },
      {
        "from": "resources/icon.png",
        "to": "icon.png"
      }
    ],
    "asarUnpack": [
      "**/node_modules/@ffmpeg-installer/**",
      "**/node_modules/fluent-ffmpeg/**"
    ],
    "protocols": [
      {
        "name": "ARC Protocol",
        "schemes": [
          "arc"
        ]
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "resources/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "resources/icon.ico",
      "uninstallerIcon": "resources/icon.ico"
    }
  }
}
